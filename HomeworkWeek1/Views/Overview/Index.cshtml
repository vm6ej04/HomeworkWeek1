@model IEnumerable<HomeworkWeek1.Models.vwCustomerOverview>

@{
    ViewBag.Title = "Index";
}

<h2>客戶關聯表</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人數)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行帳戶數)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶聯絡人數)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行帳戶數)
            </td>
        </tr>
    }

</table>
